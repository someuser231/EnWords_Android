<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordInfoActivity"
    >
    <Toolbar
        android:id="@+id/toolbar_wordInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/primary"
        >
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:background="#00FFFFFF"
            android:contentDescription="back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word info"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginStart="40dp"
            />
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_wordInfo"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/txt_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word"
            android:paddingVertical="20dp"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/txt_tcUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="US Transcription"
            android:textSize="22sp"
            android:paddingTop="20sp"
            />
        <TextView
            android:id="@+id/txt_tcUk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UK Transcription"
            android:textSize="22sp"
            android:paddingBottom="20sp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>